mixin page(title)
    doctype
    html(lang="en")
        include head.pug
        body
            include header.pug
            main
                block
            include footer.pug

mixin pagination
    section.pagination
        ul.horizontal-list
            li
                a(href="") <<
            li
                a(href="") <
            li
                a(href="") 1
            li
                a(href="") 2
            li.selected
                a(href="") 3
            li
                a(href="") 5
            li
                a(href="") 6
            li
                a(href="") >
            li
                a(href="") >>